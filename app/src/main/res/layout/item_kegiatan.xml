<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_tittle_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time_end"
            tools:text="Sampai dilokasi shooting" />

        <TextView
            android:id="@+id/tv_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="07.02" />

        <TextView
            android:id="@+id/tv_helpers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/helpers"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_300"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time_end"
            app:layout_constraintEnd_toStartOf="@+id/tv_time_end"
            app:layout_constraintStart_toEndOf="@+id/tv_time_start"
            app:layout_constraintTop_toTopOf="@+id/tv_time_end" />

        <TextView
            android:id="@+id/tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_300"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time_end"
            app:layout_constraintEnd_toStartOf="@+id/tv_time_end"
            app:layout_constraintTop_toTopOf="@+id/tv_time_end"
            tools:text="07.02" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>